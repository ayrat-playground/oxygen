<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ground_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_above="@+id/sport_name"
        android:layout_height="match_parent"
        />





    <LinearLayout
        android:id="@+id/sport_name"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:onClick="onSportClick"
        android:clickable="true"
        android:focusable="true"
        android:layout_above="@+id/district_name"
        android:theme="@style/lowerSetting"



        >

        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sport"
            android:layout_alignParentLeft="true"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@color/Purple"


            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@color/Purple"
            android:textColor="@color/White"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/district_name"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:onClick="onDistrictClick"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentBottom="true"





        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/district"
            android:layout_alignParentLeft="true"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:background="@color/Purple"


            />

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textSize="15dp"
            android:background="@color/Purple"
            android:textColor="@color/White"

            />

    </LinearLayout>


</RelativeLayout>
